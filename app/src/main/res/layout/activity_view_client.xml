<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context="com.ryuk.facturease.activities.ViewClientActivity">
	<LinearLayout android:id="@+id/container_infos" app:layout_constraintTop_toTopOf="parent" android:layout_margin="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

		<ImageButton
			android:id="@+id/button_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			app:srcCompat="@drawable/arrow"
			tools:layout_editor_absoluteX="165dp"
			tools:layout_editor_absoluteY="553dp" />

		<TextView android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nom :">
		</TextView>
		<EditText android:id="@+id/edit_nom" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/border" android:padding="7dp">
		</EditText>
		<TextView android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Prénom :">
		</TextView>
		<EditText android:id="@+id/edit_prixht" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/border" android:padding="7dp">
		</EditText>
		<TextView android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Téléphone :">
		</TextView>
		<EditText android:id="@+id/edit_telephone" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/border" android:padding="7dp">
		</EditText>
		<TextView android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Adresse :">
		</TextView>
		<EditText android:id="@+id/edit_adresse" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/border" android:padding="7dp">
		</EditText>
		<TextView android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Ville :">
		</TextView>
		<Spinner android:id="@+id/spinner_clients" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/border" android:padding="7dp" android:spinnerMode="dropdown" />
	</LinearLayout>
	<Button android:id="@+id/button_validate" app:layout_constraintTop_toBottomOf="@+id/container_infos" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="OK">
	</Button>
</androidx.constraintlayout.widget.ConstraintLayout>
